# ~/.config/lf/lfrc
#
# Basic Settings
#
# set filesep "\n"
# set hidden true
# set ifs "\n"
# set shellopts '-eu:--shwordsplit'
set drawbox true
set icons
set ignorecase true
set info size:time
set shell zsh

# Custom Functions
#
cmd open ${{
  case $(file --mime-type $f -b) in
    text/*) $EDITOR $fx;;
         *) for f in $fx; do open $f > /dev/null 2> /dev/null & done;;
  esac
}}

cmd mkdir %{{
  mkdir -p -- "$@"
  lf -remote "send $id select '$@'"
}}

cmd mkfile ${{
	$EDITOR "$@"
  lf -remote "send $id select '$@'"
}}

cmd fzf_jump ${{
    res="$(fd . --maxdepth 3 | fzf --header='Jump to location' | sed 's/\\/\\\\/g;s/"/\\"/g')"
    if [ -d "$res" ]; then
        cmd="cd"
    else 
        cmd="select"                                                       
    fi
    lf -remote "send $id $cmd \"$res\""
}}

cmd trash %trash-put $fx

# Bindings
# Remove some defaults
map m			# mark-save
map "'"		# mark-load
map `"`		# mark-remove
map e			# editor "$f"
 
# File Openers
map ee $$EDITOR "$f"
map ev $$VISUAL "$f"

# Basic Functions
map . set hidden!
map dd delete
map tr :trash
map <c-f> :fzf_jump
map mf push :mkfile<space>
map md push :mkdir<space>
map <enter> open

# Movement
map gtd cd ~/desktop
map gtc cd ~/.config
map gtl cd ~/.local
map gtp cd ~/Developer/project
map gts cd ~/Developer/sandbox

# Preview
# set previewer ~/.config/lf/pv.sh
map i $BAT_PAGER="less -R" bat $f
